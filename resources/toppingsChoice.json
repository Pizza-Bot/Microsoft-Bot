{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Choose Pizza",
          "size": "large",
          "weight": "bolder",
          "fontType": "Monospace"
        },
        {
          "type": "Input.ChoiceSet",
          "choices": [
            {
              "title": "Pepper",
              "value": "Pepper"
            },
            {
              "title": "Extra Cheese",
              "value": "Extra_Cheese"
            },
            {
              "title": "Extra_Paneer",
              "value": "Extra_Paneer"
            }
          ],
          "id": "toppingsChoice",
          "placeholder": "Choose Toppings",
          "style": "expanded",
          "separator": true,
          "wrap": true,
          "isMultiSelect": true
        }
      ]
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Submit",
          "title": "Submit",
          "style": "positive",
          "data": {
            "id": "toppings_choice"
          }
        }
      ]
    }
  ]
}
