{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.2",
  "body": [
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Choose Pizza"
        },
        {
          "type": "Input.ChoiceSet",
          "choices": [
            {
              "title": "Veg Pizza",
              "value": "Veg Pizza"
            },
            {
              "title": "Paneer Pizza",
              "value": "Paneer Pizza"
            },
            {
              "title": "Cheese Pizza",
              "value": "Cheese Pizza"
            }
          ],
          "id": "pizzachoice",
          "placeholder": "choose pizza",
          "style": "expanded",
          "separator": true,
          "wrap": true
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Submit",
      "style": "positive",
      "data": {
        "id": "pizza_choice"
      }
    }
  ]
}
